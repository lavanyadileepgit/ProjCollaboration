@model IEnumerable<Busmanagemnetsystem.Controllers.Feedback>

@{
    ViewBag.Title = "Feedback Index";
}

<h2>Feedback Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.FeedbackID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.FeedbackID })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
