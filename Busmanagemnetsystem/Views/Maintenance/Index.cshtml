@model IEnumerable<Busmanagemnetsystem.Controllers.Maintenance>

@{
    ViewBag.Title = "Maintenance";
}

<h2>Maintenance</h2>

<table class="table">
    <tr>
        <th>
            Maintenance ID
        </th>
        <th>
            Bus ID
        </th>
        <th>
            Date
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
    }

</table>
